{
  "compilerOptions": {
    "jsx": "react",

    "target": "es5",

    "module": "commonjs",

    "declaration": true,
    "esModuleInterop": true,
    
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "outDir": "./lib",
    "lib": ["ES6"],

    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules","**/__test__/*"]
}

